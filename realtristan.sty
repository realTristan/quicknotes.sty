\def\eq{\@ifstar\@eq\@@eq}
\def\@eq#1{
  \@fleqnfalse
  \begin{align*}#1\end{align*}
}
\def\@@eq#1{
  \@fleqnfalse
  \begin{align}#1\end{align}
}

