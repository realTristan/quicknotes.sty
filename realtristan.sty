% Energy and Momentum
\def\etot{E_{tot}}
\def\ptot{P_{tot}}
\def\ek{\frac{1}{2}mv^2}
\def\ee{\frac{1}{2}kx^2}

% Kinematics
\def\unimot{v = \frac{\Delta d}{\Delta t}}
\makeatletter
\pgfkeys{/realtristan/kinematics/.cd,
  d/.initial=\Delta d,
  t/.initial=\Delta t,
  a/.initial=a,
  v1/.initial=v_1,
  v2/.initial=v_2,
}
\def\realtristan@set@keys#1{%%
  \pgfkeys{/realtristan/kinematics/.cd,#1}}
\def\realtristan@get#1{%%
  \pgfkeysvalueof{/kinematics/#1}}

\def\kina[1]{
  \bgroup
  \realtristan@set@keys{#1}%%
  \def\d\realtristan@get{d}
  \def\t\realtristan@get{t}
  \def\va\realtristan@get{v1}
  \def\vb\realtristan@get{v2}
  \Delta \d = \left(\frac{\va + \vb}{2}\right\t)
  \egroup
}

\def\kinb[1]{
  \bgroup
  \realtristan@set@keys{#1}%%
  \def\t\realtristan@get{t}
  \def\a\realtristan@get{a}
  \def\va\realtristan@get{v1}
  \def\vb\realtristan@get{v2}
  \vb = \va + \a\t
  \egroup
}
\def\kinc[1]{
  \bgroup
  \realtristan@set@keys{#1}%%
  \def\d\realtristan@get{d}
  \def\t\realtristan@get{t}
  \def\a\realtristan@get{a}
  \def\va\realtristan@get{v1}
  \d = \va\t + \frac{1}{2}\a\t^2
  \egroup
}

\def\kind[1]{
  \bgroup
  \realtristan@set@keys{#1}%%
  \def\d\realtristan@get{d}
  \def\a\realtristan@get{a}
  \def\va\realtristan@get{v1}
  \def\vb\realtristan@get{v2}
  \vb = \va + 2\a\d
  \egroup
}

\makeatother


